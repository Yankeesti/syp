# ============================================================
# Docker Compose Konfiguration
# cp .env.example .env und alle Werte ausfüllen
# ============================================================

# --- Frontend ---
VITE_API_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:3000

# --- Datenbank ---
DB_USER=postgres
DB_PASSWORD=change-me-to-a-secure-password
DB_NAME=quizdb

# --- JWT (generieren: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=generate-a-secure-random-key-here
JWT_EXPIRATION_HOURS=5

# --- Magic Link ---
MAGIC_LINK_EXPIRATION_MINUTES=5

# --- E-Mail (SMTP) ---
SMTP_HOST=smtp.web.de
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=your-email@example.com
SMTP_USE_TLS=true

# --- LLM --- ("ollama" für FH-Server, "litellm" für Cloud)
LLM_PROVIDER=ollama

# Ollama (FH-Server mit BasicAuth)
LLM_API_URL=http://luke.nt.fh-koeln.de:11434/api/chat
LLM_AUTH_USER=user
LLM_AUTH_PASSWORD=your-llm-password-here
LLM_OLLAMA_GENERATION_MODEL=deepseek-r1:32b
LLM_OLLAMA_UTILITY_MODEL=qwen2.5:14b

# LiteLLM / Cloud (nur wenn LLM_PROVIDER=litellm)
LLM_LITELLM_GENERATION_MODEL=gpt-4o
LLM_LITELLM_UTILITY_MODEL=gpt-4o-mini
LLM_OPENAI_API_KEY=
LLM_ANTHROPIC_API_KEY=
LLM_GOOGLE_API_KEY=
LLM_TIMEOUT_SECONDS=180.0
