# Für lokale Entwicklung ohne Docker
# Für Docker-Deployment: Root .env.example verwenden

DATABASE_URL=postgresql+asyncpg://postgres:your-db-password@localhost:5432/quizdb
ECHO_SQL=false

JWT_SECRET_KEY=generate-with-python-secrets-module
JWT_EXPIRATION_HOURS=5

MAGIC_LINK_EXPIRATION_MINUTES=5

SMTP_HOST=smtp.web.de
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=your-email@example.com
SMTP_USE_TLS=true

LLM_PROVIDER=ollama
LLM_API_URL=http://luke.nt.fh-koeln.de:11434/api/chat
LLM_AUTH_USER=user
LLM_AUTH_PASSWORD=your-llm-password-here
LLM_OLLAMA_GENERATION_MODEL=deepseek-r1:32b
LLM_OLLAMA_UTILITY_MODEL=qwen2.5:14b

LLM_LITELLM_GENERATION_MODEL=gpt-4o
LLM_LITELLM_UTILITY_MODEL=gpt-4o-mini
LLM_OPENAI_API_KEY=
LLM_ANTHROPIC_API_KEY=
LLM_GOOGLE_API_KEY=
LLM_TIMEOUT_SECONDS=180.0
